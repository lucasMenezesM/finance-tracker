<div class="card">
  <div class="card-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Signed Up Since</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% friends.each do |friend| %>
          <tr>
            <td><%= friend.name %></td>
            <td><%= friend.email %></td>
            <td><%= following_since(current_user, friend).to_s(:long) %></td>
            <td>
              <%= link_to "#", class: "btn btn-warning btn-sm", method: :delete do%>
                <i class="fa-solid fa-user-minus me-2"></i> Stop Following
              <%end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>